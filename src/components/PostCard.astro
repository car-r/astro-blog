---
const {post} = Astro.props
---

<li >
    <div class="flex flex-col md:flex-row p-6 border border-stone-800 rounded-xl gap-2">
        <a href={post.url} class=" md:-order-last md:w-1/2 md:mr-3 mb-3 md:mb-0">
            <img src={post.frontmatter.heroImage} class="rounded-md"/>
        </a>
        <div class="flex flex-col md:w-1/2">
            <a href={post.url} class="text-xl text-stone-200 md:text-2xl font-bold hover:text-blue-400 mb-1">{post.frontmatter.title}</a>
            <time datetime={post.frontmatter.pubDate} class="text-stone-400 text-sm font-light mb-4 md:mb-2">
                {new Date(post.frontmatter.pubDate).toLocaleDateString('en-us', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric',
                })}
            </time> 
            <p class="md:block text-stone-400 mb-4 md:mb-2">{post.frontmatter.description}</p>
            <a href={post.url} class="md:block hover:underline mt-auto">Read more</a>
        </div>
