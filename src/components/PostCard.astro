---
const {post} = Astro.props
---

<li >
    <div class="flex flex-col md:flex-row p-6 border border-stone-800 rounded-xl gap-2">
        <a href={post.url} class=" md:-order-last md:w-1/2 md:mr-3 mb-3 md:mb-0">
            <img src={post.frontmatter.heroImage} class="rounded-md"/>
        </a>
        <div class="flex flex-col md:w-1/2">
            <a href={post.url} class="text-xl text-stone-200 md:text-2xl font-bold hover:text-blue-400 mb-1">{post.frontmatter.title}</a>
            <div class="flex gap-3 items-center pb-3">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
                </svg>
                <div>
                    <time datetime={post.frontmatter.pubDate} class=" text-stone-400 text-sm font-light">
                        {new Date(post.frontmatter.pubDate).toLocaleDateString('en-us', {
                            year: 'numeric',
                            month: 'short',
                            day: 'numeric',
                        })}
                    </time> 
                </div>               
            </div>
            
            <p class="md:block text-stone-400 mb-4 md:mb-2">{post.frontmatter.description}</p>
            <a href={post.url} class="md:block hover:underline mt-auto">Read more</a>
        </div>
        <!-- <a href={post.url} class="order-last md:-order-last md:w-1/2 md:mr-3">
            <img src={post.frontmatter.heroImage} class=""/>
        </a> -->
        <!-- <img src={post.frontmatter.heroImage} class=" md:w-1/2 md:-order-last md:mr-3"/> -->
        <!-- <p class="text-stone-400 md:hidden ">{post.frontmatter.description}</p>
        <a href={post.url} class="md:hidden hover:underline mt-auto">Read more</a> -->
    </div>
</li>